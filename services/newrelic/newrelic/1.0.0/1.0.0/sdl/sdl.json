{
  "name": "newrelic",
  "product_version": "1.0.0",
  "sdl_version": "1.0.0",
  "vendor": "newrelic",
  "documentation_url": "https://docs.newrelic.com/",
  "license_url": "",
  "volumes": [
  ],
  "components": [
    {
      "name": "broker",
      "version": "1.0.0",
      "vendor": "newrelic",
      "image": "gazitt/nrbroker:latest",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [
        "ALL"
      ],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "broker",
          "protocol": "HTTP",
          "source_port": 8080,
          "target_port": 8080,
          "public": true
        }
      ],
      "parameters": [
        {
          "name": "NRPLANS"
        },
        {
          "name": "SECURITY_USER_NAME"
        },
        {
          "name": "SECURITY_USER_PASSWORD"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "NRPLANS",
      "description": "A JSON array of creds to use for creating plans",
      "default": null,
      "example": "[{'planName' : '<Plan 1 Name>', 'licenseKey' : '<NR License Key for Plan 1>'}, {'planName' : '<Plan 2 Name>', 'licenseKey' : '<NR License Key for Plan 2>'}]",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "SECURITY_USER_NAME",
      "description": "Service Broker User Name",
      "default": null,
      "example": "sb-user",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "SECURITY_USER_PASSWORD",
      "description": "Service Broker Password",
      "default": null,
      "example": "sb-password",
      "data_type": "string",
      "required": true,
      "secret": false
    }
  ],
  "preflight": [],
  "postflight": []
}
